%h1= @question.title
%h5= @question.body
%hr
%h3= 'All answer:'
- @question.answers.each do |answer|
  = answer.body
  - if user_signed_in? && current_user.author_of?(answer)
    = link_to 'Delete', question_answer_path(@question, answer), method: :delete
  %br
%hr
%h3= 'Your answer to the question:'
-if user_signed_in?
  = render 'shared/errors', object: @answer

  = form_for [@question, @answer] do |f|
    = f.label :body
    = f.text_area :body
    = f.submit 'Add answer'
