%h1= @question.title
%h5= @question.body
%hr
%h3= 'All answer:'
.answers
  - @question.answers.each do |answer|
    = render 'answers', answer: answer
%hr
%h3= 'Your answer to the question:'
-if user_signed_in?
  .errors

  = form_for [@question, @answer], remote: true do |f|
    = f.label :body
    = f.text_area :body
    = f.submit 'Add answer'
