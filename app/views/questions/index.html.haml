%p= link_to 'Ask question', new_question_path

%h1= 'All Question'

- @questions.each do |question|
  %h3= link_to question.title, question
  %h5= question.body
  - if user_signed_in? && current_user.author_of?(question)
    = link_to 'Delete', question_path(question), method: :delete
  - if user_signed_in? && !current_user.author_of?(question)
    - unless current_user.already_voted?(question)
      = link_to '+1', rating_up_question_path(question), method: :patch
      = link_to '-1', rating_down_question_path(question), method: :patch
    - else
      = link_to 'Переголосовать', rating_reset_question_path(question), method: :patch
  = "(#{question.diff_like})"
  %hr