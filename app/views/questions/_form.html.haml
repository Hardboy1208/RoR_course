= render 'shared/errors', object: @question

= form_for @question, remote: @question.persisted? do |f|
  = f.label :title
  = f.text_field :title
  = f.label :body
  = f.text_area :body
  %p Attachments:
  #attachments
    = f.fields_for :attachments do |a|
      = render 'attachment_fields', f: a
    .links
      = link_to_add_association "Add attachment", f, :attachments
  = f.submit 'Save'
