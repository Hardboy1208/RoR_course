<% unless @answer.body.empty? %>
  $('.answer-' + <%= @answer.id %>).html('<%= j render @answer %>')
<% end %>

$('.flash').html('<%= j render 'shared/notice' %>')
$('#edit-answer-' + <%= @answer.id %>).prepend('<%= j render 'shared/errors', object: @answer %>')
$('.edit-answer-link').click(function(e){
  $(this).hide();
  answer_id = $(this).data('answerId');
  $('form#edit-answer-' + answer_id).show();
});
